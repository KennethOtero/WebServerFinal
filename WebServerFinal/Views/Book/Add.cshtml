@using WebServerFinal.Models
@model Books
@{
	ViewData["Title"] = $"{ViewBag.Operation} Book";
}

<h2 class="p-2">@ViewBag.Operation Add Book</h2>

<form asp-action="Add" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Author" class="form-label"></label>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Genres" class="form-label"></label>
        <select asp-for="GenreID" class="form-select"
                asp-items="@(new SelectList(ViewBag.Genres,"GenreID","Genre"))"></select>

    </div>

    <input type="hidden" asp-for="BookID" />

    <button type="submit" class="btn btn-dark">Save</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Cancel</a>

</form>
